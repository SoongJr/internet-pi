GF_SECURITY_ADMIN_PASSWORD={{ monitoring_grafana_admin_password }}
GF_USERS_ALLOW_SIGN_UP=false
GF_INSTALL_PLUGINS=flant-statusmap-panel,ae3e-plotly-panel

GF_SMTP_ENABLED={{ monitoring_grafana_email_enable }}
{% if monitoring_grafana_email_enable %}
GF_SMTP_HOST={{ monitoring_grafana_email_host }}
GF_SMTP_USER={{ monitoring_grafana_email_user }}
GF_SMTP_PASSWORD={{ monitoring_grafana_email_password }}
GF_SMTP_FROM_ADDRESS={{ monitoring_grafana_email_fromaddress }}
GF_SMTP_FROM_NAME={{ monitoring_grafana_email_fromname }}
GF_SMTP_SKIP_VERIFY: "true"
{% else %}
GF_SMTP_USER=""
GF_SMTP_PASSWORD=""
{% endif %}
